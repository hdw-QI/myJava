<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.springboot.dao.DepartmentMapper">

    <resultMap id="BaseResultMap" type="com.study.springboot.domain.entity.Department">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="companyid" column="companyId" jdbcType="INTEGER"/>
            <result property="builddate" column="buildDate" jdbcType="DATE"/>
            <result property="number" column="number" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,companyId,
        buildDate,number
    </sql>
    <select id="getByName" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from department
        where
        name = #{name,jdbcType=VARCHAR}
    </select>
</mapper>
